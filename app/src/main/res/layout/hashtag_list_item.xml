<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="15">

        <TextView
            android:id="@+id/temlate_index_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="@color/textColor"
            />

        <TextView
            android:id="@+id/template_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="テンプレ名"
            android:textColor="@color/textColor"/>

        <Button
            android:id="@+id/template_copy_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:textColor="@color/textColor"
            android:text="cpy"
            />

        <Button
            android:id="@+id/template_edit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:textColor="@color/textColor"
            android:text="edt" />
        <Button
            android:id="@+id/template_delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:textColor="@color/textColor"
            android:text="dlt" />

        <TextView
            android:id="@+id/temlate_value_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=""
            />
    </LinearLayout>


</LinearLayout>